<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsInfo" >

    <ScrollView
        android:id="@+id/news_info_scorview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/newsinfotitlelayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bing_middle_pic_bg" >

                <TextView
                    android:id="@+id/newsinfo_title_txt_ch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="书带灯"
                    android:textColor="@color/titlepro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/sharetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="分享"
                    android:textColor="@color/titleprobel" />

                <TextView
                    android:id="@+id/newsinfo_title_txt_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newsinfo_title_txt_ch"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="Simon"
                    android:textColor="@color/titleprobel"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/newspflayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/newsinfotitlelayout" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/newspager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:flipInterval="30"
                    android:persistentDrawingCache="animation" >
                </android.support.v4.view.ViewPager>

                <ImageView
                    android:id="@+id/newsinfo_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/news_info_left" />

                <ImageView
                    android:id="@+id/newsinfo_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/newsinfo_left"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/news_info_right" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/newsinfo_main_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/news_info_scorview"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:lineSpacingExtra="11dp"
        android:text="TextView"
        android:textColor="@color/newsmaintxtclor"
        android:textSize="14sp" />

</RelativeLayout>
