<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp" >

        <ImageView
            android:id="@+id/userheadimgout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:src="@drawable/photos_pic3" />

        <TextView
            android:id="@+id/out_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/userheadimgout"
            android:background="@drawable/talk_text_he_bg"
            android:maxWidth="200dp"
            android:text="TextView"
            android:textColor="@color/select"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/timeouttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/out_word"
            android:text="TextView"
            android:textColor="@color/select"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/freheadimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/timeouttxt"
            android:src="@drawable/time" />

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/freheadimg"
            android:layout_toLeftOf="@+id/freheadimg"
            android:orientation="vertical" >

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>